<Window x:Class="practika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practika"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid>
        <TextBlock HorizontalAlignment="Center" 
               Margin="0,110,0,0" 
               TextWrapping="Wrap" 
               Text="ESPOIR" 
               FontFamily="Berlin Sans FB" 
               FontSize="96" 
               VerticalAlignment="Top"/>

        <Border Background="#FFDECECE" 
            BorderThickness="0" 
            HorizontalAlignment="Center" 
            CornerRadius="45"   Height="422"        VerticalAlignment="Center" 
            Width="500">
            <StackPanel Margin="80,50,80,50">
                <TextBlock Text="Авторизация" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30" 
                       FontSize="28"   
                       Foreground="#FF554D4D" 
                       FontFamily="Malgun Gothic"/>

                <Border Background="White" CornerRadius="25" Height="50" Margin="0,0,0,15">
                    <TextBox Text="Логин" 
                         BorderThickness="0" 
                         Background="Transparent" 
                         VerticalContentAlignment="Center" 
                         Padding="20,0,0,0" 
                         FontSize="14"
                         Foreground="#666666"/>
                </Border>

                <Border Background="White" CornerRadius="25" Height="50" Margin="0,0,0,45">
                    <PasswordBox BorderThickness="0" 
                             Background="Transparent" 
                             VerticalContentAlignment="Center" 
                             Padding="20,0,0,0" 
                             FontSize="14"
                             Foreground="#666666"/>
                </Border>
                <Button Content="Войти" 
                    Width="190" 
                    Height="59" 
                    Foreground="White" 
                    Background="#FF554D4D"
                    Cursor="Hand"
                    FontSize="18" Click="Button_Click" FontFamily="Malgun Gothic Semilight">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#6B6B6B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="25"
                                            BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Нет аккаунта?" Foreground="#666666" FontSize="12" Margin="0,0,5,0"/>
                    <TextBlock FontSize="12"><Hyperlink Foreground="#8A8A8A"><Run Text="Регистрация"/></Hyperlink></TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
