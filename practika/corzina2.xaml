<Window x:Class="practika.corzina2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="corzina2"
        Height="1024"
        Width="1440"
        Background="#EAEAEA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">

                

                <Border CornerRadius="15" Background="#F0F0F0" Height="30" Width="200" Margin="15,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="⌕"
                                   Foreground="Gray"
                                   Margin="10,0,0,0"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"/>

                        <TextBox x:Name="SearchTextBox"
                                 Text="Поиск"
                                 Foreground="Gray"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 Padding="5,0,5,0"
                                 Grid.Column="1" 
                                 />
                    </Grid>
                </Border>
            </StackPanel>

            <TextBlock Text="ESPOIR" FontSize="30" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                

                <Border Margin="15,0,0,0" CornerRadius="15" Background="#F0F0F0" Height="30" Width="100">
                    <Button Content="Назад"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Padding="10,5"
                            Foreground="#333333"
                            Cursor="Hand"
                            Height="31" Width="82" Click="Button_Click"
                            />
                </Border>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Width="1246"
Height="701" CornerRadius="75" HorizontalAlignment="Center" Background="White" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Твоя корзина"
           FontSize="36"
           FontWeight="SemiBold"
           HorizontalAlignment="Center"
           Margin="0,25,0,25"/>

                <Grid Grid.Row="1" Margin="60,0,60,60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,50,0">

                        <Grid Margin="0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="60" Height="80" CornerRadius="5">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Rectangle 4.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                <TextBlock Text="Парфюмерная вода" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="DARLING* Eau de Parfum Citopia" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="50 мл" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="6500 ₽" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>


                        <Grid Margin="0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="60" Height="80" CornerRadius="5">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Rectangle 5.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                <TextBlock Text="BB крем для лица SPF 20" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="ERBORIAN BB Creme" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="15 мл" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="1000 ₽" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        </Grid>


                        <Grid Margin="0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="60" Height="80" CornerRadius="5">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Rectangle 6.png" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                <TextBlock Text="Гиалуроновый крем для лица" FontSize="14" FontWeight="SemiBold"/>
                                <TextBlock Text="INNISFREE Green Tea Seed" FontSize="16" FontWeight="Bold"/>
                                <TextBlock Text="30 мл" FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="1500 ₽" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="1500 ₽" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="49,0,0,0"/>
                        </Grid>

                    </StackPanel>

                    <Border Grid.Column="1" 
                            CornerRadius="25" 
                            Background="#F8F3F1" 
                            Padding="30"
                            Margin="50,0,0,0"
                            HorizontalAlignment="Stretch" VerticalAlignment="Center">

                        <StackPanel Orientation="Vertical">

                            <TextBlock Text="Способ получения:" FontSize="16" Margin="0,0,0,5"/>
                          
                            <TextBlock Text="не выбран" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,-20,0,20" Foreground="#7F000000"/>

                            <TextBlock Text="Способ оплаты:" FontSize="16" Margin="0,0,0,5"/>
                            <TextBlock Text="не выбран" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,-20,0,20" Foreground="#7F000000"/>



                            <TextBlock Text="Сумма к оплате" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                            <TextBlock Text="9000 ₽" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,-20,0,20" Foreground="Black"/>

                            <Button Content="Оплатить"
                                    Background="#554D4D"
                                    Foreground="White"
                                    FontSize="20"
                                    Cursor="Hand"
                                    Height="50">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="25">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>