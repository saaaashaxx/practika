<Window x:Class="practika.practika2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practika"
        mc:Ignorable="d"
        Title="practika2" Height="1024" Width="1440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">

                <Border CornerRadius="15" Background="#554D4D" Height="30" Width="100" Margin="15,0,0,0">

                    <Button Content="≡ Каталог" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontSize="13" 
                        Padding="10,5" 
                        Foreground="White" 
                        Cursor="Hand" Height="31" Width="91" BorderBrush="White" Click="Button_Click_7"/>

                </Border>

                <Border CornerRadius="15" Background="#F0F0F0" Height="30" Width="200" Margin="15,0,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="⌕" 
                   Foreground="Gray" 
                   Margin="10,0,0,0" 
                   VerticalAlignment="Center"
                   Grid.Column="0"/>

                        <TextBox x:Name="SearchTextBox"          Text="Поиск"                    Foreground="Gray"
                 BorderThickness="0" 
                 Background="Transparent"
                 VerticalContentAlignment="Center"
                 Padding="5,0,5,0"
                 Grid.Column="1" TextChanged="SearchTextBox_TextChanged"/>

                    </Grid>
                </Border>
            </StackPanel>

            <TextBlock Text="ESPOIR" FontSize="30" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <Border Margin="15,0,0,0" CornerRadius="15" Background="#F0F0F0" Height="30" Width="100">

                    <Button Content="Профиль" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontSize="16" 
                        Padding="10,5" 
                        Foreground="#333333" 
                        Cursor="Hand" Height="31" Width="87"/>
                </Border>
                <Border
                    Margin="15,0,0,0" CornerRadius="15" Background="#F0F0F0" Height="30" Width="100" PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown">

                    <Button Content="Корзина" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontSize="16" 
                        Padding="10,5" 
                        Foreground="#333333" 
                        Cursor="Hand"
                        Height="31" Width="82"/>


                </Border>


            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Border CornerRadius="40">
                <Border.Background>
                    <ImageBrush ImageSource="/PhotoCat-image-extender 1.png" Stretch="UniformToFill"/>
                </Border.Background>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40*"/>
                        <ColumnDefinition Width="60*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="80,60,20,60" VerticalAlignment="Center">

                        <TextBlock Text="Твой стиль – твои правила :)" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20" HorizontalAlignment="Center" FontStyle="Italic" Width="460"/>

                        <TextBlock Text="Забудь про долгие поиски! В нашем приложении собраны все бренды, которые ты любишь и о которых мечтаешь. Must Have классика, люксовые парфюмы и средства для ухода...&#x0A;&#x0A;Будь с нами, чтобы первым тестировать новинки, смотреть туториалы и находить свой уникальный образ." 
                                   Foreground="White" 
                                   Opacity="0.9"
                                   TextWrapping="Wrap"
                                   LineHeight="18"
                                   Margin="0,0,0,40" FontSize="18"/>
                        <Button Content="За покупками &gt;"
                                Foreground="Black" 
                                Background="White"
                                FontSize="35"
                                Padding="30,15"
                                Cursor="Hand" BorderThickness="0,0,0,0" Height="70" Width="300" Click="Button_Click_6">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="35" 
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </StackPanel>

                    <Grid Grid.Column="1">
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
